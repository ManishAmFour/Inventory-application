<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>all Items</title>
    <link type="text/css" rel="stylesheet" href="/items.css" />
  </head>
  <body>
    <div class="main-div">
      <%-include('homepage.ejs')%> <%for(let i = 0; i < rows.length; i++){%>
      <div class="title-box">
        <p><%= rows[i].title %></p>
        <p><%= rows[i].genre %></p>
        <p>$<%= rows[i].price %></p>
        <p><%= rows[i].rating %></p>
        <button class="entire-delete-button">
          <form class="delete-form" method="GET" action="/delete">
            <input
              class="inputDeleteValue"
              name="deleteValue"
              value="<%= rows[i].title %>"
            />
            <input type="submit" value="Delete" />
          </form>
        </button>
      </div>
      <%}%>
    </div>
  </body>
</html>
